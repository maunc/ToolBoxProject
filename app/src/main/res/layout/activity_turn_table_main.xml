<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="turnTableMainViewModel"
            type="com.maunc.toolbox.turntable.viewmodel.TurnTableMainViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".turntable.ui.TurnTableMainActivity">

        <include
            android:id="@+id/common_tool_bar"
            layout="@layout/layout_tool_bar_common" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/common_tool_bar">

            <RelativeLayout
                android:id="@+id/turn_table_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <com.us.mauncview.TurnTableView
                    android:id="@+id/turn_table_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:setTurnTableEnableTouch="@{turnTableMainViewModel.turnTableIsEnableTouch}"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/startTurnTable"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_150"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_turn_table_center_button" />
            </RelativeLayout>

            <com.scwang.smart.refresh.layout.SmartRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/turn_table_layout"
                android:layout_marginTop="@dimen/dp_5">

                <com.scwang.smart.refresh.header.FalsifyHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/turn_table_logger_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.scwang.smart.refresh.header.FalsifyFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        </RelativeLayout>
    </RelativeLayout>
</layout>