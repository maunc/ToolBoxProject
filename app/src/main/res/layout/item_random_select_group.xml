<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/item_select_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/item_select_click_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/select_group_item_height"
            android:background="@drawable/bg_random_select_recycler_item">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_32"
                android:orientation="vertical"
                tools:ignore="RelativeOverlap">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_select_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    tools:text="分组一" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_select_size_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="数量:50" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_select_select_flag"
                android:layout_width="@dimen/manage_group_item_expand_icon_size"
                android:layout_height="@dimen/manage_group_item_expand_icon_size"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_toStartOf="@id/item_select_expand_iv"
                android:src="@drawable/icon_select_flag"
                android:visibility="gone"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_select_expand_iv"
                android:layout_width="@dimen/manage_group_item_expand_icon_size"
                android:layout_height="@dimen/manage_group_item_expand_icon_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/icon_group_expand_no" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_select_name_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_select_click_layout"
            android:layout_marginHorizontal="@dimen/dp_40" />

        <View
            android:id="@+id/item_select_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/item_select_name_recycler"
            android:layout_marginHorizontal="@dimen/select_group_item_line_margin_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/gray" />
    </RelativeLayout>
</layout>