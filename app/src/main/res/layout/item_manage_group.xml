<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/item_manage_group_root_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/manage_group_item_height"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_32"
            android:orientation="vertical"
            tools:ignore="RelativeOverlap">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_manage_group_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="28sp"
                tools:ignore="RelativeOverlap,RtlSymmetry"
                tools:text="分组名称" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_manage_group_name_size_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:text="数量:50" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_manage_group_name_insert_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:text="添加时间" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_manage_expand_iv"
            android:layout_width="@dimen/manage_group_item_expand_icon_size"
            android:layout_height="@dimen/manage_group_item_expand_icon_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/icon_group_expand_no" />

        <View
            android:id="@+id/item_manage_group_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/manage_group_item_line_margin_horizontal"
            android:background="@color/gray" />
    </RelativeLayout>
</layout>