<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dp_5">

    <RelativeLayout
        android:id="@+id/item_canvas_setting_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_canvas_setting_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_30"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="RelativeOverlap" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_canvas_setting_expand_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/icon_group_expand_no" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_canvas_setting_more_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_canvas_setting_tab"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_canvas_setting_color_layout"
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_200"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_20">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/alpha_background" />

            <View
                android:id="@+id/signature_canvas_setting_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_canvas_setting_color_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_canvas_setting_color_layout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFeatureSettings="tnum"
            android:textSize="28sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_canvas_setting_color_seek_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_canvas_setting_color_text"
            android:layout_marginTop="@dimen/dp_10" />
    </RelativeLayout>
</RelativeLayout>